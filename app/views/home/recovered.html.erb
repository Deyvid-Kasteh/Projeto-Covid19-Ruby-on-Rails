<div class="container">
<h1>Casos recuperado</h1>
<table>
  <thead>
    <td>Pais</td>
    <td>Cidade</td>
    <td>Confirmados</td>
    <td>Ultima atualização</td>
  </thead>

  <tbody>
    <% @recovered.each do |recovered|%>
      <tr>
        <td><%= recovered['countryRegion']%></td>
        <td><%= recovered['provinceState']%></td>
        <td><%= recovered['confirmed']%></td>
        <td><%= Time.at(recovered['lastUpdate'].to_i/1000).strftime('%d/%m/%Y %H:%M:%S')%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>